@using MVC.Models.Funcionarios
@model FuncionariosModel

<div class="container mt-4">
    <div class="text-center">
        <h3 class="mb-4">Funcionarios</h3>
    </div>
    <table class="table table-striped table-bordered text-center">
        <thead class="table-dark">
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nome</th>
                <th scope="col">Cargo</th>
                <th scope="col">Salário</th>
                <th scope="col">Editar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var funcionario in Model.Funcionarios)
            {
                <tr>
                    <td>@funcionario.Id</td>
                    <td>@funcionario.Nome</td>
                    <td>@funcionario.Cargo</td>
                    <td>@funcionario.Salário</td>
                    <td>
                        <a href="@Url.Action("Record", "Funcionarios", new { id = funcionario.Id })" class="btn btn-warning btn-sm">Editar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
