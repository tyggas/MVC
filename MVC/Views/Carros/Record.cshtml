@model MVC.Models.Carros.CarroModel

<div class="container mt-4">
    <h3 class="text-center">Editar Carro</h3>
    <form asp-action="Record" method="post">
        <div class="form-group">
            <label for="id">Código</label>
            <input type="number" id="id" name="id" class="form-control" value="@Model.id" readonly />
        </div>
        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" id="Nome" name="Nome" class="form-control" value="@Model.Nome" required />
        </div>
        <div class="form-group">
            <label for="Placa">Placa</label>
            <input type="text" id="Placa" name="Placa" class="form-control" value="@Model.Placa" required />
        </div>
        <div class="form-group">
            <label for="Ano">Ano</label>
            <input type="number" id="Ano" name="Ano" class="form-control" value="@Model.Ano" required />
        </div>
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="@Url.Action("Index", "Carros")" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>
